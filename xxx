CREATE TABLE appointment (
    id VARCHAR(60) PRIMARY KEY,
    created_at DATETIME,
    updated_at DATETIME,
    description VARCHAR(256) NOT NULL DEFAULT 'There is currently no set appointment. Kindly set one with your doctor',
    time VARCHAR(128) NOT NULL DEFAULT 'There is currently no set appointment',
    date VARCHAR(128) NOT NULL,
    doctor_id VARCHAR(60) NOT NULL,
    user_id VARCHAR(60) NOT NULL,
    FOREIGN KEY (doctor_id) REFERENCES doctors(id),
    FOREIGN KEY (user_id) REFERENCES users(id)
);

